#include <iostream>

using namespace std;

int main()
{
    int n=7;
       int sum=0;
     int next=0;
      if(n==1){
        return 0;
      }
      while(n>1){

          if(n%2==0){
              next=n/2;
              sum=sum+next;
              n=n/2;

        }
        else{
          next=(n-1)/2;

            sum+=next;

                n=next+1;
            
        }


      }

       cout<< sum;
}

